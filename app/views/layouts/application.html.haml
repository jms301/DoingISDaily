%html
  %head
    %title 
      =@title.blank? ? 'Doing ISDaily' : 'Doing ISDaily - ' + @title
    = stylesheet_link_tag "isdaily"
  %body
    #content{:style=>"top:0px;left:0px;margin:1em 3em;position:relative;"}
      %div{:style=>'background:lightblue;width:100%;text-align:right;'} 
        =link_to 'home', root_path
        =link_to 'history', history_path
        =link_to 'settings', edit_user_path(@current_user)
        =link_to 'logout', user_session_path(@current_user), :method=>:delete
        &nbsp;
      #content{:style=>'padding:2em;'}
        =yield

